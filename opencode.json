{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "read": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "edit": "allow",
    "write": "allow",
    "bash": {
      "*": "ask",
      "go *": "allow",
      "git status *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git branch *": "allow",
      "git add *": "allow",
      "git commit *": "allow",
      "npm *": "allow",
      "make *": "allow",
      "echo *": "allow",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "mkdir *": "allow",
      "cp *": "allow",
      "mv *": "allow",
      "powershell *": "allow",
      "rm *": "deny",
      "rmdir *": "deny",
      "del *": "deny",
      "format *": "deny",
      "mkfs *": "deny",
      "dd *": "deny",
      "shutdown *": "deny",
      "reboot *": "deny"
    }
  }
}
